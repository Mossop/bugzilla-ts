{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "noEmitOnError": true,

    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,

    "allowJs": true,
    "noEmit": true,
  },
  "include": [
    "src/**/*.ts",
    "*.js",
    ".*.js"
  ]
}
